# API Keys
OPENAI_API_KEY=your_openai_key_here
GOOGLE_API_KEY=your_google_key_here
DEEPSEEK_API_KEY=your_deepseek_key_here

# HuggingFace Token (for free hosted OCR - no 6.67GB download!)
# Get free token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# LLM Configuration
LLM_MODEL=gpt-5-nano
EMBEDDING_MODEL=text-embedding-3-small

# Vector Store
CHROMA_PERSIST_DIR=./chroma_db
COLLECTION_NAME=rag_documents

# OCR Configuration
USE_MOCK_OCR=false
HF_MODEL_NAME=deepseek-ai/DeepSeek-OCR

# Note: DeepSeek-OCR requires trust_remote_code=True
# Recommended: GPU with 8GB+ VRAM for optimal performance
# CPU mode is supported but slower

# Text Processing (Semantic Chunking)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# Logging
LOG_LEVEL=INFO
